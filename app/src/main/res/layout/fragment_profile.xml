<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_decky_profile_bg"
    tools:context=".ui.Profile_Fragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_top"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="80dp"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:id="@+id/guide_bottom"
        app:layout_constraintGuide_end="100dp"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/profile_view">
        <androidx.cardview.widget.CardView
            android:id="@+id/whats_deck_text"
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardPreventCornerOverlap="false"
            app:cardElevation="6dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:text="decky nedir?">
            </androidx.appcompat.widget.AppCompatTextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/button_circular_logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            card_view:cardCornerRadius="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            card_view:cardPreventCornerOverlap = "false"
            card_view:cardElevation="6dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@drawable/ic_logout">
            </androidx.appcompat.widget.AppCompatImageView>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        card_view:cardCornerRadius="80dp"
        android:layout_marginBottom="10dp"
        card_view:cardPreventCornerOverlap = "false"
        app:layout_constraintBottom_toTopOf="@id/nickname_text_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        card_view:cardElevation="4dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_in_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            style="@style/ProfileStrokeStyle">
            <androidx.appcompat.widget.AppCompatImageView
               android:id="@+id/avatar_image"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_premium_point"
              >
            </androidx.appcompat.widget.AppCompatImageView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nickname_text_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="32dp"
        android:text="John Doe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nickname_text_bottom">
    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.cardview.widget.CardView
        android:id="@+id/button_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        card_view:cardCornerRadius="30dp"
        card_view:cardPreventCornerOverlap = "false"
        card_view:cardElevation="4dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="17dp"
        app:layout_constraintStart_toEndOf="@id/nickname_text_top"
        app:layout_constraintBottom_toTopOf="@id/nickname_text_bottom">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_edit"
            android:layout_gravity="center_vertical|center_horizontal">
        </androidx.appcompat.widget.AppCompatImageView>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nickname_text_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="32dp"
        android:text="John Doe"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_battkel_success_imageview">
    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_battkel_success_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_battle_success_text"
        android:orientation="horizontal">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/battle_badge"
                android:layout_width="90dp"
                android:layout_height="90dp"
                card_view:cardCornerRadius="80dp"
                card_view:cardPreventCornerOverlap = "false"
                card_view:cardElevation="4dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_profile_battleactive"
                    android:layout_gravity="center_vertical|center_horizontal">
                </androidx.appcompat.widget.AppCompatImageView>
            </androidx.cardview.widget.CardView>


        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/Success_badge"
                android:layout_width="90dp"
                android:layout_height="90dp"
                card_view:cardCornerRadius="80dp"
                card_view:cardPreventCornerOverlap = "false"
                card_view:cardElevation="4dp"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_point_big_green"
                    android:layout_gravity="center_vertical|center_horizontal">
                </androidx.appcompat.widget.AppCompatImageView>
            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_battle_success_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="50dp"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@id/text_follow_us">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/left_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_battle_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12"
                android:textColor="@color/title_text_color"
                android:textSize="32dp"
                android:textStyle="bold"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_battle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Battle"
                android:textSize="16dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/right_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_success_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/profile_text_green"
                android:textSize="32dp"
                android:textStyle="bold"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_success"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Başarı"
                android:textSize="16dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_follow_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_instagram"
        android:layout_marginBottom="20dp"
        android:textSize="16dp"
        android:text="Bizi takip edin"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/button_linkedin"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="25dp"
        card_view:cardCornerRadius="19dp"
        card_view:cardPreventCornerOverlap = "false"
        card_view:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/button_instagram"
        app:layout_constraintBottom_toBottomOf="@id/guide_bottom">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_linkedin"
            android:layout_gravity="center_vertical|center_horizontal">
        </androidx.appcompat.widget.AppCompatImageView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/button_instagram"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="25dp"
        card_view:cardCornerRadius="19dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        card_view:cardPreventCornerOverlap = "false"
        card_view:cardElevation="4dp"
        app:layout_constraintStart_toEndOf="@id/button_linkedin"
        app:layout_constraintEnd_toStartOf="@id/button_facebook"
        app:layout_constraintBottom_toBottomOf="@id/guide_bottom">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_instagram"
            android:layout_gravity="center_vertical|center_horizontal">
        </androidx.appcompat.widget.AppCompatImageView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/button_facebook"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="25dp"
        card_view:cardCornerRadius="19dp"
        android:layout_marginEnd="20dp"
        card_view:cardPreventCornerOverlap = "false"
        card_view:cardElevation="4dp"
        app:layout_constraintStart_toEndOf="@id/button_instagram"
        app:layout_constraintEnd_toStartOf="@id/button_twitter"
        app:layout_constraintBottom_toBottomOf="@id/guide_bottom">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_facebook"
            android:layout_gravity="center_vertical|center_horizontal">
        </androidx.appcompat.widget.AppCompatImageView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/button_twitter"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="25dp"
        card_view:cardCornerRadius="19dp"
        card_view:cardPreventCornerOverlap = "false"
        card_view:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_facebook"
        app:layout_constraintBottom_toBottomOf="@id/guide_bottom">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_twitter"
            android:layout_gravity="center_vertical|center_horizontal">
        </androidx.appcompat.widget.AppCompatImageView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>